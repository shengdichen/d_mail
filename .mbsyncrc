SyncState *

# outlook {{{
# remote {{{
IMAPAccount OUTLOOK_ACCOUNT
Host outlook.office365.com
Port 993
SSLType IMAPS
User shengdi@outlook.de
PassCmd "gpg -dq ~/mail/pw/outlook.gpg"

IMAPStore OUTLOOK_REMOTE
Account OUTLOOK_ACCOUNT
# }}}

# local {{{
MaildirStore OUTLOOK_LOCAL_INBOX
SubFolders Maildir++
Inbox ~/mail/raw/outlook/.INBOX/

Channel OUTLOOK_INBOX
Far :OUTLOOK_REMOTE:
Near :OUTLOOK_LOCAL_INBOX:
Patterns "INBOX"
Create Both

MaildirStore OUTLOOK_LOCAL
SubFolders Maildir++
Inbox ~/mail/raw/outlook/

Channel OUTLOOK_X
Far :OUTLOOK_REMOTE:
Near :OUTLOOK_LOCAL:
Patterns "x/*"
Create Both

Channel OUTLOOK_MISC
Far :OUTLOOK_REMOTE:
Near :OUTLOOK_LOCAL:
Patterns "Deleted"
Create Both

Group OUTLOOK_ALL
Channel OUTLOOK_INBOX
Channel OUTLOOK_X
Channel OUTLOOK_MISC
# }}}
# }}}

# eth {{{
# remote {{{
IMAPAccount ETH_ACCOUNT
Host mail.ethz.ch
Port 993
SSLType IMAPS
User shenchen@ethz.ch
PassCmd "gpg -dq ~/mail/pw/eth.gpg"
# bypass NTLM-authentication
AuthMech LOGIN

IMAPStore ETH_REMOTE
Account ETH_ACCOUNT
# }}}

# local {{{
MaildirStore ETH_LOCAL_INBOX
SubFolders Maildir++
Inbox ~/mail/raw/eth/.INBOX/

MaildirStore ETH_LOCAL
SubFolders Maildir++
Inbox ~/mail/raw/eth/

Channel ETH_INBOX
Far :ETH_REMOTE:
Near :ETH_LOCAL_INBOX:
Patterns "INBOX"
Create Both

Channel ETH_X
Far :ETH_REMOTE:
Near :ETH_LOCAL:
Patterns "x/*"
Create Both

Channel ETH_MISC
Far :ETH_REMOTE:
Near :ETH_LOCAL:
Patterns "Trash"
Create Both

Group ETH_ALL
Channel ETH_INBOX
Channel ETH_X
Channel ETH_MISC
# }}}
# }}}

